# https://github.com/kubevela/kubevela/blob/v1.9.7/charts/vela-core/values.yaml
## @param imageRegistry Image registry
imageRegistry: {{ registry.mirror_docker_io }}/
image:
  repository: oamdev/vela-core
  tag: v1.9.7

multicluster:
  clusterGateway:
    image:
      repository: oamdev/cluster-gateway
      tag: v1.9.0-alpha.2

## @skip admissionWebhooks
admissionWebhooks:
  patch:
    image:
      repository: oamdev/kube-webhook-certgen
      tag: v2.4.1

## @param affinity Affinity
affinity:
  nodeAffinity:
    requiredDuringSchedulingIgnoredDuringExecution:
      nodeSelectorTerms:
        - matchExpressions:
            - key: node-role.kubernetes.io/control-plane
              operator: Exists
